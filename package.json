{
  "name": "skanban",
  "version": "0.1.4",
  "description": "Simple Kanban tool using Electron 10 and Angular 10. Based on https://github.com/dalenguyen/todo-app-electron-angular",
  "homepage": "https://github.com/Sheryv/SKanban",
  "author": {
    "name": "Sheryv",
    "email": "sheryv.it@gmail.com"
  },
  "keywords": [
    "todo",
    "angular",
    "angular 10",
    "electron",
    "typescript",
    "sass"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "yarn run postinstall:electron && electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "ng": "ng",
    "start-only-angular": "yarn run postinstall:electron && npm-run-all -p ng:serve electron:compile",
    "start": "yarn run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "build-base": "yarn run postinstall:electron && yarn run electron:serve-tsc && ng build",
    "build": "yarn run build-base -- -c production",
    "build:dev": "yarn run build -- -c dev",
    "build:prod": "yarn run build",
    "ng:serve": "ng serve",
    "ng:serve:web": "yarn run postinstall:web && ng serve -o",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:compile": "wait-on http-get://localhost:4200/ && tsc -p tsconfig-serve.json -w",
    "electron:serve": "wait-on http-get://localhost:4200/ && yarn run electron:serve-tsc && electron . --serve",
    "electron:serve-only": "electron . --serve",
    "electron:local": "yarn run build:prod && electron .",
    "electron:linux": "yarn run build:prod && electron-builder build --linux",
    "electron:windows": "yarn run build:prod && electron-builder build --windows",
    "electron:mac": "yarn run build:prod && electron-builder build --mac",
    "test": "yarn run postinstall:web && ng test",
    "e2e": "yarn run postinstall:web && ng e2e",
    "version": "conventional-changelog -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
  },
  "dependencies": {
    "ace-builds": "^1.4.12",
    "angular-split": "^4.0.0",
    "dompurify": "^2.2.6",
    "luxon": "^2.0.0",
    "ngx-color-picker": "^11.0.0",
    "ngx-markdown-editor": "^3.3.0",
    "ngx-material-timepicker": "^4.0.2",
    "rxjs": "^6.6.3",
    "sqlite": "^4.0.17",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1002.0",
    "@angular/animations": "^10.1.6",
    "@angular/cdk": "^10.2.5",
    "@angular/cli": "10.2.0",
    "@angular/common": "10.2.3",
    "@angular/compiler": "10.2.3",
    "@angular/compiler-cli": "10.2.3",
    "@angular/core": "10.2.3",
    "@angular/forms": "10.2.3",
    "@angular/language-service": "10.2.3",
    "@angular/material": "^10.2.5",
    "@angular/platform-browser": "10.2.3",
    "@angular/platform-browser-dynamic": "10.2.3",
    "@angular/router": "10.2.3",
    "@ngx-translate/core": "^11.0.1",
    "@ngx-translate/http-loader": "^4.0.0",
    "@types/dompurify": "^2.1.0",
    "@types/jasmine": "^3.6.1",
    "@types/luxon": "^1.24.3",
    "@types/marked": "^1.2.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^13.13.2",
    "amd-loader": "^0.0.8",
    "chai": "^4.2.0",
    "codelyzer": "^6.0.1",
    "conventional-changelog-cli": "2.0.11",
    "core-js": "^2.6.1",
    "electron": "^10.1.5",
    "electron-builder": "^22.11.7",
    "electron-reload": "1.5.0",
    "hammerjs": "^2.0.8",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~5.0.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "mocha": "^8.2.1",
    "ng-keyboard-shortcuts": "^10.1.16",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "spectron": "5.0.0",
    "ts-node": "^7.0.1",
    "tslint": "~6.1.0",
    "typescript": "4.0.3",
    "wait-on": "^3.2.0",
    "webdriver-manager": "^12.1.0",
    "zone.js": "^0.10.3"
  }
}
