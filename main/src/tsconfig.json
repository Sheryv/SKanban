{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "outDir": "../dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "target": "esnext",
    "types": [
      "node"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "files": [
    "main.ts",
    "preload/preload.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
