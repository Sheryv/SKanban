{
  "asar": false,
  "productName": "SKanban",
  "appId": "SKanban",
  "directories": {
    "output": "release/",
    "buildResources": "renderer/dist",
    "app": "main"
  },
  "artifactName": "SKanban-${version}.${ext}",
  "files": [
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!renderer/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json",
    "!**/*.ts",
    "renderer/dist",
    "main/dist/**/*.js",
    "dist/**/*.js",
    "dist-main/preload/**/*.js",
    "dist-main/renderer/shared/**/*.js"
  ],
  "asarUnpack": [
    "./node_modules/node-notifier/**/*"
  ],
  "extraFiles": [
    {
      "from": "renderer/dist/",
      "to": "resources/app/"
    },
    {
      "from": "renderer/dist/assets/",
      "to": "resources/app/assets",
      "filter": [
        "*.*"
      ]
    }
  ],
  "win": {
    "icon": "favicon.pack.ico",
    "target": [
      "zip"
    ]
  },
  "mac": {
    "icon": "favicon.pack.ico",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "favicon.256x256.png",
    "target": [
      "AppImage"
    ]
  }
}
