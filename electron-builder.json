{
  "asar": true,
  "productName": "SKanban",
  "appId": "SKanban",
  "directories": {
    "output": "release/",
    "buildResources": "main/build",
    "app": "main"
  },
  "artifactName": "SKanban-${version}-${os}.${ext}",
  "files": [
    {
      "from": "build",
      "to": "./"
    },
    "!*.code-workspace",
    "!LICENSE.md",
    "!package-lock.json",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json",
    "!**/*.ts",
    "package.json",
    "dist/**/*.js"
  ],
  "asarUnpack": [
    "./node_modules/node-notifier/**/*"
  ],
  "win": {
    "icon": "favicon.pack.ico",
    "target": [
      "zip"
    ]
  },
  "mac": {
    "icon": "favicon.pack.ico",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "favicon.256x256.png",
    "target": [
      "AppImage"
    ]
  }
}
