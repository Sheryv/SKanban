{
  "productName": "SKanban",
  "directories": {
    "output": "release/"
  },
  "appId": "com.sheryv.${name}",
  "files": [
    "**/*",
    "!*.code-workspace",
    "!LICENSE.md",
    "!package.json",
    "!package-lock.json",
    "!src/",
    "!e2e/",
    "!hooks/",
    "!angular.json",
    "!_config.yml",
    "!karma.conf.js",
    "!tsconfig.json",
    "!tslint.json",
    "src/server/",
    "src/shared/",
    "!**/*.ts"
  ],
  "win": {
    "icon": "dist",
    "target": [
      "zip"
    ]
  },
  "mac": {
    "icon": "dist",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
